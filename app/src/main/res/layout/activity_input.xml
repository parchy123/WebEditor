<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout android:background="@color/white" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/scrollView">


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:layout_marginRight="16dp" android:layout_marginLeft="16dp">

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/short_description" android:layout_marginRight="8dp" android:layout_marginLeft="8dp" android:textSize="16sp" android:textColor="@color/black" android:maxLength="80" android:lineSpacingMultiplier="1.5" android:hint="@string/hint_short" android:gravity="center" android:layout_marginTop="30dp" android:layout_marginBottom="30dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/description" android:layout_marginRight="8dp" android:layout_marginLeft="8dp" android:textSize="14sp" android:textColor="@color/black" android:maxLength="4000" android:lineSpacingMultiplier="1.5" android:hint="@string/hint_description" android:layout_marginTop="20dp" android:layout_marginBottom="20dp"/>

</LinearLayout>

</com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

    <android.support.design.widget.FloatingActionButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/fab" android:layout_marginRight="16dp" android:layout_marginBottom="16dp" app:rippleColor="@color/colorAccent" app:fabSize="normal" app:borderWidth="0dp" android:src="@drawable/ic_code" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>


    <com.bowyer.app.fabtransitionlayout.FooterLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/fabtoolbar" android:layout_alignParentBottom="true" app:ft_container_gravity="center" app:ft_color="@color/colorAccent">


    <HorizontalScrollView android:layout_height="match_parent" android:layout_width="match_parent">

    <include layout="@layout/include_tag"/>

</HorizontalScrollView>

</com.bowyer.app.fabtransitionlayout.FooterLayout>

</RelativeLayout>